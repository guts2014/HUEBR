<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.estimote.examples.demos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <!-- Needed permissions in order to scan for beacons. -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- Declaration that this app is usable on phones with Bluetooth Low Energy. -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:label="Beacon Hunter"
        android:theme="@android:style/Theme.Black" >
        <activity
            android:name="br.huehue.activities.BeaconsManagerActivity"
            android:label="Beacon Hunter"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.huehue.activities.BeaconFoundActivity"
            android:label="Beacon Hunter"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.huehue.activities.HintActivity"
            android:label="Select Beacon"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.huehue.activities.DistanceBeaconActivity"
            android:label="Distance Demo"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.huehue.activities.NotifyDemoActivity"
            android:label="Notify Demo"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.huehue.activities.CharacteristicsDemoActivity"
            android:label="Characteristics Demo"
            android:screenOrientation="portrait" />

        <!-- Estimote service responsible for scanning beacons. -->
        <service
            android:name="com.estimote.sdk.service.BeaconService"
            android:exported="false" />

        <activity
            android:name="br.huehue.activities.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="br.huehue.activities.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.huehue.activities.ListBeaconsActivity"
            android:label="Beacons" >
        </activity>
        <activity
            android:name="br.huehue.activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="br.huehue.activities.RegisterBeaconActivity"
            android:label="@string/title_activity_register_beacon" >
        </activity>
        <activity
            android:name="br.huehue.activities.EndGameActivity"
            android:label="@string/title_activity_register_beacon" >
        </activity>
    </application>

</manifest>